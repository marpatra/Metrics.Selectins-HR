)

# Fit logistic regression: Cardio ~ Thal
model <- glm(Cardio ~ Thal, data = data, family = binomial)

# Predicted probabilities for Cardio = 1
p_hat <- predict(model, type = "response")

# Brier Score
brier_score <- mean((p_hat - data$Cardio)^2)

cat("Brier Score:", brier_score, "\n")
