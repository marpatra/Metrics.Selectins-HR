             7, 3, 7, 3, 7, 7, 6, 3, 3, 7, 7, 3, 7, 3, 3, 7, 6, 7, 7, 3,
             7, 7, 3, 3, 3, 3, 3, 3, 3, 3, 7, 7, 7, 3, 3, 7, 3, 7, 7, 3,
             7, 3, 3, 3, 7, 7, 7, 3, 3, 3, 3, 3, 3, 3, 3, 7, 3, 3, 3, 3,
             3, 6, 6, 6, 7, 3, 7, 6, 7, 3, 3, 7, 3, 3, 3, 3, 3, 7, 3, 7,
             3, 7, 3, 7, 6, 6, 7, 7, 3, 7, 3, 7, 3, 7, 7, 6, 7, 7, 7, 7,
             7, 3, 3, 3]
}

df = pd.DataFrame(data)

# If there were missing values like '?', handle them (kept for completeness)
df = df.replace('?', np.nan).dropna()
df["Thal"] = pd.to_numeric(df["Thal"])

# Prepare X and y for modelling
X = df[["Thal"]].values  # 2D array
y = df["Cardio"].values  # 1D array

from sklearn.linear_model import LogisticRegression
from sklearn.metrics import brier_score_loss

# Fit logistic regression: Cardio ~ Thal
model = LogisticRegression(solver="lbfgs", max_iter=1000)
model.fit(X, y)

# Predicted probabilities for Cardio = 1
predicted_probabilities = model.predict_proba(X)[:, 1]

# Compute Brier Score
brier_score = brier_score_loss(y, predicted_probabilities)

print("Brier Score:", brier_score)
